<% @produto.errors.full_messages.each do |msg|%>
    <div class="alert alert-danger" role="alert">
    <%= msg %>
    </div>        
<% end %>       
<%= form_for @produto do |form| %>
    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <%= form.label :rotulo%>  
                <%= form.text_field :rotulo, class:"form-control"%>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <%= form.label :pais%> 
                <%= form.text_field :pais, class:"form-control"%>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <%= form.label :departamento %> 
                <%= form.collection_select :departamento_id, @departamentos, :id, :nome, {}, class:"form-control" %>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-5">
            <div class="form-group">
                <%= form.label :uva%> 
                <%= form.text_field :uva, class:"form-control"%>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <%= form.label :preco%> 
                <%= form.number_field :preco, step:0.01, class:"form-control"%>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-3">
            <div class="form-group">
                <%= form.label :nota%> 
                <%= form.number_field :nota, step:0.01, class:"form-control"%>
            </div>
        </div> 
    </div>

    <div class="row">
        <div class="col-sm-8">
            <div class="form-group">
                <%= form.label :observacao%> 
                <%= form.text_area :observacao, class:"form-control" , rows:4%>
            </div>
        </div> 
    </div>
<%= form.submit texto_da_acao , class:"btn btn-primary" %>
<%end%> 